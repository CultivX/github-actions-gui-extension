{
    "manifest_version": 3,
    "name": "GitHub Workflow Extension",
    "version": "1.2",
    "description": "Local Developement",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["https://github.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "actions-icon.png",
        "48": "actions-icon.png",
        "128": "actions-icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://github.com/*"],
        "css": ["iconScript.css"],
        "js": ["iconScript.js"]
      }
    ],
    "icons": {
      "16": "actions-icon.png",
      "48": "actions-icon.png",
      "128": "actions-icon.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["workflow.svg"],
        "matches": ["<all_urls>"]
      }
    ]
  }
